@model IEnumerable<Complaint>


@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="card">
            <div class="card-header">
            Complaint @item.Id 
            </div>
                <ul class="list-group list-group-flush">
                <li class="list-group-item">@item.Name</li>
                <li class="list-group-item">@item.Type</li>
                <li class="list-group-item">@item.Info</li>
                </ul>
                <a href="#" class="btn btn-primary">Send it to Customer Service</a>
            </div>

        </div>
    }
</div>
